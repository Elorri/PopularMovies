<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/lineMarginRight"
        android:layout_marginBottom="@dimen/lineMarginBottom"
        android:layout_marginLeft="@dimen/lineMarginLeft"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/detail_label_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/trailerReviewPaddingBottom"
        android:paddingLeft="@dimen/titlePaddingLeft"
        tools:text="Trailers"
        android:textAppearance="?android:textAppearanceLarge"
        />
</LinearLayout>