<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarSettings.PreLollipop.PopularMovies.NoTitle</item>
    </style>

    <!-- Settings activity action bar styles -->
    <style name="ActionBarSettings.PreLollipop.PopularMovies.NoTitle"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
        <item name="android:height">@dimen/actionBarSettingsHeight</item>
    </style>

    <!-- Detail activity favorite button style -->
    <style name="FavoriteButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:src">@drawable/favorite_selector</item>
    </style>

</resources>
